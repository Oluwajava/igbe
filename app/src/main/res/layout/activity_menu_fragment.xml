<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fragments will be injected here -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"></FrameLayout>

    <!-- Bottom navigation bar -->
    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        app:bb_behavior="shifting"
        app:bb_inActiveTabAlpha="0.5"
        app:bb_titleTypeFace="fonts/Roboto-Regular.ttf"
        app:bb_inActiveTabColor="@color/tabInactiveColor"
        app:bb_titleTextAppearance="@style/TabTextAppearance"
        app:bb_tabXmlResource="@xml/bottombar_tabs_five" />

</RelativeLayout>
