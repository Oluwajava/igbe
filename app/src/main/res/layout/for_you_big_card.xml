<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="35"
        android:background="@color/main_news_background">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="450dp"

            android:id="@+id/thumbnail"
            />

        <TextView
            android:text="Secret of MSN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/unselected"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:text="However, in case you face any difficulty (say a developer account problem) in the official website..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/unselected"
            android:textAllCaps="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">

            <TextView
                android:text="SkySport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/source"
                android:layout_weight="1"
                android:textColor="@color/unselected"
                android:layout_marginLeft="10dp" />

            <TextView
                android:text="1m ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:layout_weight="1"
                android:textColor="@color/unselected"
                android:textAlignment="textEnd"
                android:layout_marginRight="10dp" />
        </LinearLayout>
    </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>