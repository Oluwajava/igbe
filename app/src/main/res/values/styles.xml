<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextColor">#000</item>
    </style>

    <!-- Custom TextAppearance for bottom nav title -->
    <style name="TabTextAppearance" parent="AppTheme">
        <item name="android:textSize">12sp</item>

    </style>

    <style name="SearchItemAppearance" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tabInactiveColor</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
