<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:weightSum="1"
    android:background="#fff">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:background="#fff"
        app:cardElevation="0dp"
        card_view:cardPreventCornerOverlap="false"
        >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:padding="20dp"
            android:background="#fff"
            android:layout_height="170dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="70">

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/thumbnail"
                    android:layout_height="120dp" />
            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:layout_marginRight="20dp"
                android:weightSum="5"
                android:background="#fff">

                <TextView
                    android:text="Saints fall short in red zone in first game without Jimmy Graham"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_weight="1"/>

                <TextView
                    android:text="An enthusiast recent graduate with B.sc in political science (public administration) and international relations. Excellent research,"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/content"
                    android:maxLength="100"
                    android:textColor="@color/unselected"
                    android:layout_marginTop="10dp"
                    android:layout_weight="3"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_marginTop="10dp"
                    android:layout_weight="5">

                    <TextView
                        android:text="ESPN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/source"
                        android:layout_weight="1"
                        android:textColor="@color/unselected" />

                    <TextView
                        android:text="2h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/time"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textColor="@color/unselected" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
